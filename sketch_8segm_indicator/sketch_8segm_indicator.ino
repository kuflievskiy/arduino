/**/int latchPin = 8;int clockPin = 12;int dataPin = 11;byte cifra[] = {  0b11011101,// 0  0b01010000,// 1  0b10011011,// 2  0b11011010,// 3  0b01010110,// 4  0b11001110, // 5  0b11001111, // 6  0b01011000, // 7  0b11011111, // 8  0b11011110, // 9  0b00100000 // .  };int number_cifra = 0;void setup() {  pinMode(latchPin, OUTPUT);  pinMode(clockPin, OUTPUT);  pinMode(dataPin, OUTPUT);}void loop() {    if(number_cifra>10){      number_cifra = 0;    }            digitalWrite(latchPin,LOW); // close 74HC595    shiftOut(dataPin, clockPin, MSBFIRST, cifra[number_cifra]);    digitalWrite(latchPin,HIGH); // open 74HC595            delay(1000);    number_cifra++;    } 